<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.usuario.app" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PaintActivity"
            android:label="@string/title_activity_paint"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".WaitingActivity"
            android:label="@string/title_activity_waiting"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".WordActivity"
            android:label="@string/title_activity_word"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".PuzzleActivity"
            android:label="@string/title_activity_puzzle"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".VideoActivity"
            android:label="@string/title_activity_video"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>
