<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lmd.bluetree.bluetreeapp.WordActivity"
    android:id="@+id/rLayoutWordActivity"
    android:background="#000000"
    >

    <RelativeLayout
        android:id="@+id/containerTop1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/backgwords"
        android:tag="I"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/containerTop2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/backgwords"
        android:tag="MA"
        android:layout_alignTop="@+id/containerTop1"
        android:layout_alignLeft="@+id/containerBottom2"
        android:layout_alignStart="@+id/containerBottom2">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/containerTop3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/backgwords"
        android:tag="GI"
        android:layout_alignTop="@+id/containerTop2"
        android:layout_centerHorizontal="true">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/containerTop4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/backgwords"
        android:tag="NA"
        android:layout_alignTop="@+id/containerTop3"
        android:layout_alignLeft="@+id/containerBottom4"
        android:layout_alignStart="@+id/containerBottom4">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/containerTop5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/backgwords"
        android:tag="ÇÃO"
        android:layout_alignTop="@+id/containerTop4"
        android:layout_alignLeft="@+id/containerBottom5"
        android:layout_alignStart="@+id/containerBottom5">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/containerBottom1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/backgwordslarge"
        android:tag="null"
        android:layout_alignTop="@+id/containerBottom2"
        android:layout_alignLeft="@+id/containerTop1"
        android:layout_alignStart="@+id/containerTop1">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wordcao"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:tag="ÇÃO"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/containerBottom2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/backgwordslarge"
        android:tag="null"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_above="@+id/btnConfirm"
        android:layout_toRightOf="@+id/containerBottom1"
        android:layout_toEndOf="@+id/containerBottom1">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wordna"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:tag="NA"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/containerBottom3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/backgwordslarge"
        android:tag="null"
        android:layout_alignTop="@+id/containerBottom2"
        android:layout_alignLeft="@+id/containerTop3"
        android:layout_alignStart="@+id/containerTop3">

        <ImageView
            android:id="@+id/img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wordgi"
            android:tag="GI"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/containerBottom4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/backgwordslarge"
        android:tag="null"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_alignTop="@+id/containerBottom3"
        android:layout_toRightOf="@+id/containerBottom3"
        android:layout_toEndOf="@+id/containerBottom3">

        <ImageView
            android:id="@+id/img4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wordma"
            android:tag="MA"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/containerBottom5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/backgwordslarge"
        android:tag="null"
        android:layout_above="@+id/btnConfirm"
        android:layout_toRightOf="@+id/containerBottom4"
        android:layout_toEndOf="@+id/containerBottom4"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp">

        <ImageView
            android:id="@+id/img5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wordi"
            android:tag="I"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/btnnextdefault"
        android:id="@+id/btnConfirm"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>