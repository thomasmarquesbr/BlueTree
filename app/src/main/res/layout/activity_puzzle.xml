<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lmd.bluetree.bluetreeapp.PuzzleActivity"
    android:id="@+id/rLayoutPuzzleActivity"
    android:background="#000000"
    >

    <RelativeLayout
        android:layout_width="124dp"
        android:layout_height="164dp"
        android:id="@+id/container1"
        android:background="@drawable/backgpiecepuzzle"
        android:tag="1"
        >
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="124dp"
        android:layout_height="164dp"
        android:id="@+id/container2"
        android:background="@drawable/backgpiecepuzzle"
        android:layout_alignTop="@+id/container1"
        android:layout_toLeftOf="@+id/container6"
        android:layout_toStartOf="@+id/container6"
        android:tag="2"
        >
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="124dp"
        android:layout_height="164dp"
        android:id="@+id/container3"
        android:background="@drawable/backgpiecepuzzle"
        android:layout_alignTop="@+id/container2"
        android:layout_toRightOf="@+id/container2"
        android:layout_toEndOf="@+id/container2"
        android:tag="3">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="124dp"
        android:layout_height="164dp"
        android:id="@+id/container4"
        android:background="@drawable/backgpiecepuzzle"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:tag="4">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="124dp"
        android:layout_height="164dp"
        android:id="@+id/container5"
        android:background="@drawable/backgpiecepuzzle"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/container1"
        android:layout_toEndOf="@+id/container1"
        android:tag="5">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="124dp"
        android:layout_height="164dp"
        android:id="@+id/container6"
        android:background="@drawable/backgpiecepuzzle"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/container5"
        android:layout_toEndOf="@+id/container5"
        android:tag="6">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="185dp"
        android:layout_height="330dp"
        android:id="@+id/panel"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:id="@+id/containerA"
            android:background="@drawable/backgpiecepuzzle"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:tag="null"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/image6"
                android:tag="6"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/image6"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:id="@+id/containerB"
            android:background="@drawable/backgpiecepuzzle"
            android:layout_alignTop="@+id/containerA"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:tag="null">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/image5"
                android:tag="5"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/image5"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:id="@+id/containerC"
            android:background="@drawable/backgpiecepuzzle"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/containerA"
            android:layout_alignStart="@+id/containerA"
            android:tag="null">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/image4"
                android:tag="4"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/image4"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:id="@+id/containerD"
            android:background="@drawable/backgpiecepuzzle"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/containerB"
            android:layout_alignStart="@+id/containerB"
            android:tag="null">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/image3"
                android:tag="3"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/image3"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:id="@+id/containerE"
            android:background="@drawable/backgpiecepuzzle"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/containerC"
            android:layout_alignStart="@+id/containerC"
            android:layout_marginBottom="15dp"
            android:tag="null">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/image2"
                android:tag="2"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/image2"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:id="@+id/containerF"
            android:background="@drawable/backgpiecepuzzle"
            android:layout_alignTop="@+id/containerE"
            android:layout_alignLeft="@+id/containerD"
            android:layout_alignStart="@+id/containerD"
            android:tag="null">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/image1"
                android:tag="1"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/image1"
                />
        </RelativeLayout>

    </RelativeLayout>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/btnnextdefault"
        android:id="@+id/btnConfirm"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>