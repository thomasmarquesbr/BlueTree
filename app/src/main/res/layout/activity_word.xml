<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lmd.bluetree.bluetreeapp.WordActivity"
    android:id="@+id/rLayoutWordActivity"
    android:background="@color/primary_dark_material_dark"
    >

    <RelativeLayout
        android:id="@+id/containerTop1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/backgwords"
        android:layout_marginBottom="70dp"
        android:tag="PRIN"
        android:layout_marginRight="80dp"
        android:layout_marginEnd="80dp"
        android:layout_above="@+id/containerBottom1"
        android:layout_toLeftOf="@+id/containerTop2"
        android:layout_toStartOf="@+id/containerTop2">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/containerTop2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/backgwords"
        android:tag="CE"
        android:layout_alignTop="@+id/containerTop1"
        android:layout_alignLeft="@+id/containerBottom2"
        android:layout_alignStart="@+id/containerBottom2">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/containerTop3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/backgwords"
        android:tag="SA"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp"
        android:layout_alignTop="@+id/containerTop2"
        android:layout_toRightOf="@+id/containerTop2"
        android:layout_toEndOf="@+id/containerTop2">

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/containerBottom1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/backgwordslarge"
        android:layout_marginBottom="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/containerTop1"
        android:layout_alignStart="@+id/containerTop1"
        android:tag="null">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wordsa"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:tag="SA"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/containerBottom2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/backgwordslarge"
        android:tag="null"
        android:layout_below="@+id/containerTop1"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wordce"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:tag="CE"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/containerBottom3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/backgwordslarge"
        android:tag="null"
        android:layout_below="@+id/containerTop1"
        android:layout_alignLeft="@+id/containerTop3"
        android:layout_alignStart="@+id/containerTop3">

        <ImageView
            android:id="@+id/img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wordprin"
            android:tag="PRIN"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/btnnextdefault"
        android:id="@+id/btnConfirm"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>